. /etc/profile

BASEDTB="rk3326-rg351p-linux"
MOUNT="/flash"

flash() {
  mount -o remount,${1} ${MOUNT}
}

on() {
  flash rw
  sed -i "s#${BASEDTB}.dtb#${BASEDTB}-oc.dtb#g" /flash/boot.ini
  flash ro
}

off() {
  flash rw
  sed -i "s#${BASEDTB}-oc.dtb#${BASEDTB}.dtb#g" /flash/boot.ini
  flash ro
}

$1
